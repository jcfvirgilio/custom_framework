{
  "name": "custom_framework",
  "version": "0.1.0",
  "description": "Un micro-framework ultra-performance",
  "type": "module",
  "main": "dist/main.js",
  "module": "dist/main.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm - rf dist",
    "pack": "bun run scripts/pack.js",
    "build": "esbuild src/main.js --bundle --minify --minify-whitespace --minify-identifiers --minify-syntax --format=esm  --outdir=dist",
    "obfuscate": "javascript-obfuscator dist --output dist --compact true --self-defending true",
    "dev": "esbuild src/main.js --bundle --outdir=dist --sourcemap --watch",
    "watch": "esbuild src/main.js --bundle --watch --sourcemap --outfile=dist/main.js",
    "build:prod": "bun run build && bun run obfuscate",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepush": "bun run lint && bunx prettier --check .",
    "format": "prettier --write",
    "prepare": "husky",
    "postinstall": "husky install",
    "start": "open index.html"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.css": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/bun": "latest",
    "esbuild": "^0.25.2",
    "eslint": "^9.25.0",
    "husky": "^9.1.7",
    "javascript-obfuscator": "^4.1.1",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "dompurify": "^3.2.5",
    "tar": "^7.4.3"
  }
}
